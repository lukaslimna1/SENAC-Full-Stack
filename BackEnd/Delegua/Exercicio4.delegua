// Faça um algoritmo para ler três notas de um aluno em uma disciplina e imprimir a sua média ponderada (as notas tem pesos respectivos de 1, 2 e 3).

var nota1 = real(leia("Informe a sua primeira Nota: "))
var nota2 = real(leia("Informe a sua segunda Nota: "))
var nota3 = real(leia("Informe a sua terceira Nota: "))
var media = (nota1 * 1 + nota2 * 2 + nota3 * 3) / 6
escreva("Sua media ponderada é " + media)